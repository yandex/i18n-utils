{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "declarationDir": "types",
    "declaration": true,
    "target": "esnext",
    "module": "esnext",
    "strict": true
  },
  "include": [
    "./lib/**/*.ts",
    "./index.ts"
  ]
}
