{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "ignorePatterns": [
    "test.js",
    "index.js",
    "scripts/**/*"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    "@typescript-eslint/no-var-requires": "off"
  }
}
